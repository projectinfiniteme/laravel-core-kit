provider "aws" {
  region  = "eu-west-2"
  profile = "starter"
}

# Project name for all names
variable "project" {
  type    = string
  default = "attract-starter"
}

locals {
  tags = {
    maintainer = "AttractGroup"
    developer  = "Amondar-SO"
  }

  s3 = {
    tfBucket          = "tf-${var.project}"
    devResources      = "${var.project}-development-resources"
    stageResources    = "${var.project}-stage-resources"
    prodResources     = "${var.project}-production-resources"
    iamDevResources   = "S3DevResourcesAccess"
    iamStageResources = "S3StageResourcesAccess"
    iamProdResources  = "S3ProdResourcesAccess"

    // PGP key used for safe encryption for secret keys received from aws iam.
    // Run commands:
    // brew install gpg
    // gpg --full-generate-key
    // Fill next answers: 1 type, 4096 length, Your name and email and etc.
    // Set strong password and reenter it on "MSDOS" screen .
    // gpg --export "YOUR FULL NAME THAT YOU ENTERED BEFORE" | base64
    // Copy paste.
    // To decode iam secret enter:
    // terraform output -raw {output name} | base64 --decode | gpg
    pgpKeyValue = <<EOF

EOF
  }

  aws = {
    region = "eu-west-2"
  }
}